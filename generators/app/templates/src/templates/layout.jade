doctype html
include mixins/index
html(lang='en')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width')
		block meta
			title= meta.title
		block css
			link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600&subset=latin,cyrillic-ext,latin-ext,cyrillic', rel='stylesheet', type='text/css')
			link(rel='stylesheet', href='/styles/index.css')
	body
		block content
		block popup
		block js
			script(async, src='/scripts/vendor.js')
			script(async, src='/scripts/index.js')
